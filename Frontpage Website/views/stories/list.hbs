{{>header-area}}
<!-- End header area -->
{{>mainmenu}}

<!-- Page content -->
<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        {{#if author}}
            <div class="row">
                <h3>Tác giả: {{author.name}}</h3>
                </br>
                <textarea style="border: none; overflow:auto; width: 100%; height: 8cm" readonly>{{author.info}}</textarea>
            </div>
            </br>
            <h4>Danh sách truyện của {{author.name}}</h4>
        {{/if}}

        {{#if genre}}
            <div class="row">
                <h3>Thể loại: {{genre.name}}</h3>
                </br>
                <textarea style="border: none; overflow:auto; width: 100%; height: 2cm" readonly>{{genre.info}}</textarea>
            </div>
            </br>
            <h4>Danh sách truyện thuộc thể loại {{genre.name}}</h4>
        {{/if}}
        <div class="row">
            {{#each storyList}}
                <div class="col-md-6 col-sm-6">
                    <div class="single-shop-product">
                        <div class="col-sm-4 col-md-4">
                            <img width="150" height="150" src="{{this.img}}" alt="" class="img-rounded img-responsive" />
                        </div>
                        <div class="col-sm-8 col-md-8">
                            <blockquote>
                                <form id="plusViewForm" action="stories/{{this.id}}" method="POST">
                                    <a onclick="this.parentElement.submit()" style="color: black">{{this.name}}</a>
                                </form>
                                <a style="color: black" href="stories/list/author/{{this.author.id}}"><small><cite title="Source Title">{{this.author.name}}&nbsp;<span class="fa fa-pencil"></span></cite></small></a>
                            </blockquote>
                            <a style="color: black" href="stories/list/genre/{{this.genre.id}}"><i class="fa fa-book"></i>&nbsp;{{this.genre.name}}</a>
                            </br>
                            <i class="glyphicon glyphicon-eye-open"></i>&nbsp;{{this.views}}
                            </br>
                            <i class="glyphicon glyphicon-check"></i>&nbsp;{{this.finished}}
                            </br>
                        </div>
                    </div>
                </div>
                </br>
            {{/each}}

        </div>
