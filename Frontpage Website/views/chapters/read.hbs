<!-- chapter start-->
<div class="container">
    <a href="stories/{{chapter.story.id}}"><p style="color: black">{{chapter.story.name}}</p></a>
    <hr class="chapter-name-start">
    <hr class="style13">
    <p>{{chapter.name}}</p>
    <hr class="style13">
    <hr class="chapter-start">
    <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Danh sách chương&nbsp;<span class="caret"></span></button>
        <ul class="dropdown-menu scrollable-menu" role="menu">
            {{#each chapterList}}
                <!--<li><a href="chapters/{{this.id}}">{{this.name}}</a></li>-->
                <form id="historyForm" action="chapters/{{this.id}}" method="POST">
                    <a onclick="this.parentElement.submit()" style="color: black"><li>{{this.name}}</li></a>
                </form>
            {{/each}}
        </ul>
    </div>
    </br>
    </br>
    </br>
    <!-- chapter content-->
    <pre class="chapter-content">{{chapter.content}}</pre>
    <a href="stories/{{chapter.story._id}}"><img width="100" height="100" src="img/outchapter.png"></a>
