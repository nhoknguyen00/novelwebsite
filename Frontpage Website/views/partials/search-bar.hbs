                <option value="IC">Huyền Huyễn</option>
                <option value="TF">Ngôn Tình</option>
            </select>
        </div>

        <span>
            <button type="submit" class="btn btn-success search-button">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
    </form>
</div>